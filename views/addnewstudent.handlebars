<link rel="stylesheet" href="./assets/css/addNewStudent.css">
<title>Add New Student</title>
    
<div class="p-3 mb-2">
    <h1 class="p-4 text-center" >Add New Student</h1>
    <form class="studentForm text-center" class="p-3">
        <div id="error"></div>
        <label for="firstName" class="text-start mt-5 fs-3 p-3">First Name:</label>
        <input type="text" id="firstName" required><br><br>
        
        <label for="lastName" class="text-start fs-3 p-3">Last Name:</label>
        <input type="text" id="lastName" required><br><br>
        
        <label for="userName" class="text-start fs-3 p-3">Username:</label>
        <input type="text" id="userName" required><br><br>
        
        <label for="password" class="text-start fs-3 p-3">Password:</label>
        <input type="text" id="password" required><br><br>

        <label for="goals" class="text-start fs-3 p-3">Daily Goals:</label>
        <input type="number" id="goals" required><br><br>

        <div id="goalContainer">

        </div>
        
        <button type="submit" id="generateCredentials"  class="fs-3 mt-3 px-4 btn btn-warning btn-lg ">Save</button>
    </form>
</div>

    <div id="credentials"></div>

    <script src="./scripts/addnewstudent.js"></script>
       
